---
import MainLayout from "../../layouts/MainLayout.astro";
import CheckStatusForm from "../../components/CheckStatusForm";
import Navbar from "../../components/layout/Navbar.astro";
import Footer from "../../components/layout/Footer.astro";
import { CheckCircle } from "lucide-react";
---

<MainLayout
    title="Cek Status Pendaftaran"
    description="Pantau status pendaftaran santri baru Yayasan Mukhtar Syafa'at."
>
    <!-- Wrapper utama untuk Sticky Footer -->
    <div class="min-h-screen flex flex-col bg-slate-50">
        <Navbar />

        <main class="flex-grow">
            <!-- Header Section -->
            <section
                class="bg-teal-900 text-white pt-32 pb-24 lg:pt-40 lg:pb-32 relative overflow-hidden"
            >
                <div
                    class="absolute inset-0 bg-[url('/pattern-grid.svg')] opacity-10"
                >
                </div>
                <div
                    class="absolute -bottom-10 -right-10 w-64 h-64 bg-teal-500 rounded-full blur-3xl opacity-20"
                >
                </div>
                <div
                    class="absolute -top-10 -left-10 w-64 h-64 bg-emerald-500 rounded-full blur-3xl opacity-20"
                >
                </div>

                <div
                    class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10 text-center"
                >
                    <div
                        class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full text-white/90 text-sm font-bold uppercase tracking-widest mb-6 border border-white/20 backdrop-blur-sm"
                    >
                        <CheckCircle className="h-4 w-4" /> Portal Pendaftaran
                    </div>
                    <h1
                        class="text-4xl lg:text-5xl font-serif mb-6 leading-tight"
                    >
                        Cek Status Pendaftaran
                    </h1>
                    <p
                        class="text-teal-100 text-lg max-w-2xl mx-auto leading-relaxed"
                    >
                        Pantau progres verifikasi berkas dan status penerimaan
                        calon siswa/santri baru secara real-time.
                    </p>
                </div>
            </section>

            <!-- Content Section -->
            <section class="-mt-16 px-6 pb-20 relative z-20">
                <CheckStatusForm client:load />
            </section>
        </main>

        <Footer />
    </div>
</MainLayout>
