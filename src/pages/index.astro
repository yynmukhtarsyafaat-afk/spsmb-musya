---
import MainLayout from "../layouts/MainLayout.astro";
import {
    ChevronRight,
    ChevronLeft,
    CheckCircle,
    FileText,
    Users,
    BookOpen,
    GraduationCap,
    ArrowRight,
    Sparkles,
    ExternalLink,
    ShieldCheck,
} from "lucide-react";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
---

<MainLayout
    title="Beranda"
    description="Platform pendaftaran resmi Yayasan Mukhtar Syafa'at."
>
    <!-- Navbar -->
    <!-- Navbar -->
    <Navbar />

    <!-- Hero Section -->
    <section
        id="beranda"
        class="pt-28 pb-12 overflow-hidden flex items-center relative bg-gradient-to-br from-teal-50 via-emerald-50 to-cyan-50"
    >
        <!-- Animated Background Elements -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <!-- Floating Orbs -->
            <div
                class="absolute top-20 left-10 w-72 h-72 bg-teal-200/40 rounded-full blur-3xl animate-float"
            >
            </div>
            <div
                class="absolute top-40 right-20 w-96 h-96 bg-emerald-200/30 rounded-full blur-3xl animate-float-delayed"
            >
            </div>
            <div
                class="absolute bottom-10 left-1/3 w-80 h-80 bg-cyan-200/40 rounded-full blur-3xl animate-float-slow"
            >
            </div>
            <div
                class="absolute -bottom-20 right-10 w-64 h-64 bg-teal-300/30 rounded-full blur-3xl animate-float"
            >
            </div>
            <!-- Subtle Grid Pattern -->
            <div
                class="absolute inset-0 bg-[linear-gradient(to_right,#0d9488_1px,transparent_1px),linear-gradient(to_bottom,#0d9488_1px,transparent_1px)] bg-[size:4rem_4rem] opacity-[0.03]"
            >
            </div>
        </div>
        <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
            <div class="text-center max-w-4xl mx-auto">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 bg-teal-100 rounded-full text-teal-900 text-sm font-bold uppercase tracking-widest mb-6 border border-teal-200"
                >
                    <Sparkles className="h-3.5 w-3.5 text-teal-700" /> Penerimaan
                    Santri Baru 2026/2027
                </div>
                <h1
                    class="text-4xl lg:text-6xl font-serif text-foreground leading-[1.1] mb-6"
                >
                    SPSMB <span class="italic text-primary"
                        >Yayasan Mukhtar Syafa'at</span
                    > Blokagung
                </h1>
                <p
                    class="text-muted-foreground text-lg mb-10 max-w-2xl mx-auto leading-relaxed"
                >
                    Sistem Penerimaan Santri dan Murid Baru. Platform
                    pendaftaran digital satu pintu yang mengutamakan kemudahan
                    dan pelayanan terbaik.
                </p>
                <div
                    class="flex flex-col sm:flex-row justify-center gap-4 mb-10"
                >
                    <a
                        href="/daftar"
                        class="bg-primary text-primary-foreground px-8 py-4 rounded-2xl font-bold hover:bg-primary/90 transition-all shadow-xl shadow-primary/20 flex items-center justify-center"
                    >
                        Daftar Sekarang
                    </a>
                    <a
                        href="#unit"
                        class="bg-card text-primary border border-border px-8 py-4 rounded-2xl font-bold hover:bg-secondary transition-all flex items-center justify-center"
                    >
                        Informasi Lengkap
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Unit Pendidikan Bento Grid -->
    <section id="unit" class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-12">
            <div class="mb-10 text-center lg:text-left">
                <span
                    class="text-primary font-bold uppercase tracking-[0.2em] text-sm mb-2 block"
                    >Lembaga Kami</span
                >
                <h2 class="text-4xl lg:text-5xl font-serif text-foreground">
                    Unit Pendidikan
                </h2>
            </div>

            {/* Standard Grid Layout */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {/* Pesantren Units */}
                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <BookOpen className="h-7 w-7" />
                        </div>
                        <div>
                            <span
                                class="inline-block px-3 py-1 rounded-full bg-teal-100 text-teal-700 text-xs font-bold uppercase tracking-widest mb-3"
                            >
                                Putra
                            </span>
                            <h3 class="text-xl font-serif text-teal-950 mb-2">
                                PP. Mukhtar Syafa'at 1
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed"
                            >
                                Pondok pesantren putra dengan fokus pendalaman
                                kitab kuning dan tahfidz.
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <BookOpen className="h-7 w-7" />
                        </div>
                        <div>
                            <span
                                class="inline-block px-3 py-1 rounded-full bg-teal-100 text-teal-700 text-xs font-bold uppercase tracking-widest mb-3"
                            >
                                Putra
                            </span>
                            <h3 class="text-xl font-serif text-teal-900 mb-2">
                                PP. Mukhtar Syafa'at 2
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed"
                            >
                                Unit pendidikan pesantren putra dengan fasilitas
                                asrama modern.
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-pink-50 rounded-2xl flex items-center justify-center text-pink-500 shrink-0 group-hover:bg-pink-500 group-hover:text-white transition-colors duration-300"
                        >
                            <BookOpen className="h-7 w-7" />
                        </div>
                        <div>
                            <span
                                class="inline-block px-3 py-1 rounded-full bg-pink-100 text-pink-700 text-xs font-bold uppercase tracking-widest mb-3"
                            >
                                Putri
                            </span>
                            <h3 class="text-xl font-serif text-teal-900 mb-2">
                                PP. Mukhtar Syafa'at 1
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed"
                            >
                                Pondok pesantren putri dengan bimbingan intensif
                                keagamaan.
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-pink-50 rounded-2xl flex items-center justify-center text-pink-500 shrink-0 group-hover:bg-pink-500 group-hover:text-white transition-colors duration-300"
                        >
                            <BookOpen className="h-7 w-7" />
                        </div>
                        <div>
                            <span
                                class="inline-block px-3 py-1 rounded-full bg-pink-100 text-pink-700 text-xs font-bold uppercase tracking-widest mb-3"
                            >
                                Putri
                            </span>
                            <h3 class="text-xl font-serif text-teal-900 mb-2">
                                PP. Mukhtar Syafa'at 2
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed"
                            >
                                Unit pendidikan pesantren putri dengan
                                lingkungan yang asri dan kondusif.
                            </p>
                        </div>
                    </div>
                </div>

                {/* Formal Schools */}
                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group relative overflow-hidden"
                >
                    <div class="relative z-10 flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <GraduationCap className="h-7 w-7" />
                        </div>
                        <div>
                            <h3 class="text-2xl font-serif text-teal-900 mb-2">
                                MA Unggulan
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed mb-4"
                            >
                                Madrasah Aliyah berprestasi dengan integrasi
                                kurikulum pesantren dan nasional.
                            </p>
                            <span
                                class="text-xs font-bold text-teal-600 uppercase tracking-widest flex items-center gap-2 group-hover:gap-3 transition-all"
                            >
                                Selengkapnya <ArrowRight
                                    className="h-3.5 w-3.5"
                                />
                            </span>
                        </div>
                    </div>
                    <div
                        class="absolute -bottom-6 -right-6 w-32 h-32 bg-teal-50 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500 opacity-50"
                    >
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group relative overflow-hidden"
                >
                    <div class="relative z-10 flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <BookOpen className="h-7 w-7" />
                        </div>
                        <div>
                            <h3 class="text-2xl font-serif text-teal-900 mb-2">
                                SMK Unggulan
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed mb-4"
                            >
                                Sekolah Menengah Kejuruan siap kerja dengan
                                kompetensi unggul dan mandiri.
                            </p>
                            <span
                                class="text-xs font-bold text-teal-600 uppercase tracking-widest flex items-center gap-2 group-hover:gap-3 transition-all"
                            >
                                Selengkapnya <ArrowRight
                                    className="h-3.5 w-3.5"
                                />
                            </span>
                        </div>
                    </div>
                    <div
                        class="absolute -bottom-6 -right-6 w-32 h-32 bg-teal-50 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500 opacity-50"
                    >
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group relative overflow-hidden"
                >
                    <div class="relative z-10 flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <ShieldCheck className="h-7 w-7" />
                        </div>
                        <div>
                            <h3 class="text-2xl font-serif text-teal-900 mb-2">
                                MTs Unggulan
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed mb-4"
                            >
                                Madrasah Tsanawiyah dengan kurikulum terpadu
                                untuk pembentukan karakter.
                            </p>
                            <span
                                class="text-xs font-bold text-teal-600 uppercase tracking-widest flex items-center gap-2 group-hover:gap-3 transition-all"
                            >
                                Selengkapnya <ArrowRight
                                    className="h-3.5 w-3.5"
                                />
                            </span>
                        </div>
                    </div>
                    <div
                        class="absolute -bottom-6 -right-6 w-32 h-32 bg-teal-50 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500 opacity-50"
                    >
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group relative overflow-hidden"
                >
                    <div class="relative z-10 flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <ShieldCheck className="h-7 w-7" />
                        </div>
                        <div>
                            <h3 class="text-2xl font-serif text-teal-900 mb-2">
                                SMP Unggulan
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed mb-4"
                            >
                                Sekolah Menengah Pertama berbasis pesantren
                                dengan standar pendidikan berkualitas.
                            </p>
                            <span
                                class="text-xs font-bold text-teal-600 uppercase tracking-widest flex items-center gap-2 group-hover:gap-3 transition-all"
                            >
                                Selengkapnya <ArrowRight
                                    className="h-3.5 w-3.5"
                                />
                            </span>
                        </div>
                    </div>
                    <div
                        class="absolute -bottom-6 -right-6 w-32 h-32 bg-teal-50 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500 opacity-50"
                    >
                    </div>
                </div>

                <div
                    class="bg-white rounded-[2rem] p-8 border border-border/50 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group relative overflow-hidden"
                >
                    <div class="relative z-10 flex items-start gap-6">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-2xl flex items-center justify-center text-teal-600 shrink-0 group-hover:bg-teal-500 group-hover:text-white transition-colors duration-300"
                        >
                            <Users className="h-7 w-7" />
                        </div>
                        <div>
                            <h3 class="text-2xl font-serif text-teal-900 mb-2">
                                TK/PAUD/KB
                            </h3>
                            <p
                                class="text-muted-foreground text-sm leading-relaxed mb-4"
                            >
                                Pendidikan usia dini Mukhtar Syafa'at dengan
                                pendekatan bermain dan belajar.
                            </p>
                            <span
                                class="text-xs font-bold text-teal-600 uppercase tracking-widest flex items-center gap-2 group-hover:gap-3 transition-all"
                            >
                                Selengkapnya <ArrowRight
                                    className="h-3.5 w-3.5"
                                />
                            </span>
                        </div>
                    </div>
                    <div
                        class="absolute -bottom-6 -right-6 w-32 h-32 bg-teal-50 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500 opacity-50"
                    >
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Alur Pendaftaran -->
    <section id="alur" class="py-16 bg-secondary/30">
        <div class="max-w-7xl mx-auto px-6 lg:px-12">
            <div class="text-center mb-10">
                <h2 class="text-4xl font-serif text-teal-950 mb-4">
                    Prosedur Pendaftaran
                </h2>
                <p class="text-muted-foreground">
                    Langkah mudah untuk menjadi bagian dari keluarga besar kami.
                </p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div
                    class="p-8 rounded-[2rem] border border-border flex flex-col justify-between h-56 transition-all hover:scale-[1.02] cursor-default bg-white hover:shadow-lg"
                >
                    <span class="text-4xl font-serif italic text-teal-600"
                        >01</span
                    >
                    <div>
                        <h3 class="text-xl font-serif mb-2 text-teal-950">
                            Pendaftaran Online
                        </h3>
                        <p class="text-sm text-muted-foreground">
                            Klik menu "Formulir" dan lengkapi seluruh data
                            santri serta orang tua dengan benar.
                        </p>
                    </div>
                </div>
                <div
                    class="p-8 rounded-[2rem] border border-border flex flex-col justify-between h-56 transition-all hover:scale-[1.02] cursor-default bg-white hover:shadow-lg"
                >
                    <span class="text-4xl font-serif italic text-teal-600"
                        >02</span
                    >
                    <div>
                        <h3 class="text-xl font-serif mb-2 text-teal-950">
                            Unggah Dokumen
                        </h3>
                        <p class="text-sm text-muted-foreground">
                            Unggah dokumen yang diperlukan seperti Kartu
                            Keluarga, Akta Kelahiran, dan Pas Foto.
                        </p>
                    </div>
                </div>
                <div
                    class="p-8 rounded-[2rem] border border-border flex flex-col justify-between h-56 transition-all hover:scale-[1.02] cursor-default bg-primary text-white shadow-xl shadow-teal-200"
                >
                    <span class="text-4xl font-serif italic text-white/120"
                        >03</span
                    >
                    <div>
                        <h3 class="text-xl font-serif mb-2">Verifikasi Data</h3>
                        <p class="text-sm text-white/300">
                            Tim kami akan memeriksa kelengkapan dan kebenaran
                            data yang Anda masukkan.
                        </p>
                    </div>
                </div>
                <div
                    class="p-8 rounded-[2rem] border border-border flex flex-col justify-between h-56 transition-all hover:scale-[1.02] cursor-default bg-white hover:shadow-lg"
                >
                    <span class="text-4xl font-serif italic text-teal-600"
                        >04</span
                    >
                    <div>
                        <h3 class="text-xl font-serif mb-2 text-teal-950">
                            Cek Status
                        </h3>
                        <p class="text-sm text-muted-foreground">
                            Cek status pendaftaran Anda dan unduh bukti
                            pendaftaran.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <!-- Footer -->
    <Footer />
</MainLayout>
