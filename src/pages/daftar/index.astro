---
import MainLayout from "../../layouts/MainLayout.astro";
import Navbar from "../../components/layout/Navbar.astro";
import Footer from "../../components/layout/Footer.astro";
import RegistrationForm from "../../components/registration/RegistrationForm";
---

<MainLayout
    title="Pendaftaran Santri Baru"
    description="Formulir Pendaftaran Online SPSMB Yayasan Mukhtar Syafa'at"
>
    <Navbar />

    <main class="min-h-screen pt-28 pb-12 bg-slate-50">
        <div class="max-w-4xl mx-auto px-4 md:px-6">
            <div class="text-center mb-10">
                <h1
                    class="text-3xl md:text-5xl font-serif font-bold text-teal-950 mb-4"
                >
                    Formulir Pendaftaran
                </h1>
                <p class="text-muted-foreground max-w-2xl mx-auto">
                    Silakan isi data diri, pendidikan, dan orang tua dengan
                    lengkap dan benar sesuai dokumen resmi (Ijazah/Akte/KK).
                </p>
            </div>

            <!-- React Component untuk Form Multi-step -->
            <RegistrationForm client:load />
        </div>
    </main>

    <Footer />
</MainLayout>
