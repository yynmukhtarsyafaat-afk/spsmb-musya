---
import MainLayout from "../../layouts/MainLayout.astro";
import {
    MapPin,
    Phone,
    Mail,
    Clock,
    Send,
    MessageCircle,
    Instagram,
    Youtube,
    Facebook,
    ArrowRight,
} from "lucide-react";
import Navbar from "../../components/layout/Navbar.astro";
import Footer from "../../components/layout/Footer.astro";
---

<MainLayout
    title="Kontak Kami"
    description="Hubungi kami untuk informasi lebih lanjut tentang pendaftaran santri baru Yayasan Mukhtar Syafa'at."
>
    <!-- Navbar -->
    <Navbar />

    <!-- Header / Hero -->
    <section class="pt-32 pb-10 bg-secondary/50">
        <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center">
            <h1 class="text-4xl lg:text-5xl font-serif text-foreground mb-6">
                Hubungi Kami
            </h1>
            <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
                Punya pertanyaan seputar pendaftaran? Tim kami siap membantu
                Anda.
            </p>
        </div>
    </section>

    <!-- Bento Grid Section -->
    <section class="pt-8 pb-16 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-12">
            <div
                class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-auto md:auto-rows-[200px]"
            >
                <!-- 1. Peta Lokasi (2x2) -->
                <div
                    class="md:col-span-2 md:row-span-2 relative overflow-hidden rounded-[2rem] border border-border shadow-md group h-[400px] md:h-full"
                >
                    <iframe
                        src="https://maps.google.com/maps?q=H432%2BW78+Kaligesing+Karangmulyo+Tegalsari+Banyuwangi+Jawa+Timur+68485&t=&z=15&ie=UTF8&iwloc=&output=embed"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Lokasi Yayasan Mukhtar Syafa'at"
                        class="absolute inset-0 w-full h-full grayscale-[20%] group-hover:grayscale-0 transition-all duration-700"
                    ></iframe>
                    <div
                        class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-xl text-xs font-bold text-foreground shadow-sm"
                    >
                        Lokasi Pesantren
                    </div>
                </div>

                <!-- 2. Alamat (1x1) -->
                <div
                    class="md:col-span-1 md:row-span-1 bg-secondary rounded-[2rem] p-6 border border-border flex flex-col justify-between group hover:border-emerald-200 transition-colors"
                >
                    <div
                        class="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-emerald-600 shadow-sm"
                    >
                        <MapPin className="h-5 w-5" />
                    </div>
                    <div>
                        <h3 class="font-bold text-foreground mb-1">Alamat</h3>
                        <p
                            class="text-xs text-muted-foreground leading-relaxed"
                        >
                            JL. KH. Mukhtar Syafa'at, Tegalsari, Banyuwangi
                        </p>
                    </div>
                </div>

                <!-- 3. Jam Operasional (1x2) - Vertical -->
                <div
                    class="md:col-span-1 md:row-span-2 bg-white rounded-[2rem] p-6 border border-border flex flex-col relative overflow-hidden group"
                >
                    <div class="flex items-center gap-3 mb-6 relative z-10">
                        <div
                            class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-600"
                        >
                            <Clock className="h-5 w-5" />
                        </div>
                        <h3 class="font-bold text-foreground">Jam Buka</h3>
                    </div>

                    <div class="space-y-4 flex-1 relative z-10">
                        <div class="pb-3 border-b border-dashed border-border">
                            <span
                                class="block text-xs text-muted-foreground mb-1"
                                >Senin - Kamis</span
                            >
                            <span
                                class="block text-sm font-bold text-foreground"
                                >08:00 - 14:00</span
                            >
                        </div>
                        <div class="pb-3 border-b border-dashed border-border">
                            <span
                                class="block text-xs text-muted-foreground mb-1"
                                >Jumat - Sabtu</span
                            >
                            <span
                                class="block text-sm font-bold text-foreground"
                                >08:00 - 11:00</span
                            >
                        </div>
                        <div>
                            <span
                                class="block text-xs text-muted-foreground mb-1"
                                >Minggu</span
                            >
                            <span class="block text-sm font-bold text-red-500"
                                >Libur</span
                            >
                        </div>
                    </div>

                    <div class="mt-4 pt-4 border-t border-border relative z-10">
                        <p class="text-[10px] text-muted-foreground italic">
                            *Jam dapat berubah sewaktu-waktu saat hari besar.
                        </p>
                    </div>

                    <div
                        class="absolute -bottom-10 -right-10 w-32 h-32 bg-emerald-50 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700 pointer-events-none"
                    >
                    </div>
                </div>

                <!-- 4. Telepon (1x1) -->
                <div
                    class="md:col-span-1 md:row-span-1 bg-secondary rounded-[2rem] p-6 border border-border flex flex-col justify-between group hover:border-emerald-200 transition-colors"
                >
                    <div class="flex justify-between items-start">
                        <div
                            class="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-emerald-600 shadow-sm"
                        >
                            <Phone className="h-5 w-5" />
                        </div>
                        <a
                            href="https://wa.me/6283192931314"
                            target="_blank"
                            class="p-2 bg-white rounded-full hover:bg-emerald-100 text-emerald-600 transition-colors"
                            title="Chat WhatsApp"
                        >
                            <MessageCircle className="h-4 w-4" />
                        </a>
                    </div>
                    <div>
                        <h3 class="font-bold text-foreground mb-1">Telepon</h3>
                        <p class="text-xs text-muted-foreground">
                            0831-9293-1314
                        </p>
                    </div>
                </div>

                <!-- 5. Email (1x1) -->
                <div
                    class="md:col-span-1 md:row-span-1 bg-secondary rounded-[2rem] p-6 border border-border flex flex-col justify-between group hover:border-emerald-200 transition-colors"
                >
                    <div
                        class="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-emerald-600 shadow-sm"
                    >
                        <Mail className="h-5 w-5" />
                    </div>
                    <div>
                        <h3 class="font-bold text-foreground mb-1">Email</h3>
                        <a
                            href="mailto:yynmukhtarsyafaat@gmail.com"
                            class="text-xs text-muted-foreground hover:text-primary transition-colors block truncate"
                        >
                            yynmukhtarsyafaat@gmail.com
                        </a>
                    </div>
                </div>

                <!-- 6. Social Media (1x1) -->
                <div
                    class="md:col-span-1 md:row-span-1 bg-primary text-primary-foreground rounded-[2rem] p-6 border border-emerald-400/20 flex flex-col justify-between group relative overflow-hidden"
                >
                    <h3 class="font-bold relative z-10">Sosial Media</h3>
                    <div class="flex gap-2 relative z-10">
                        <a
                            href="#"
                            class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center hover:bg-white hover:text-primary transition-colors"
                        >
                            <Instagram className="h-4 w-4" />
                        </a>
                        <a
                            href="#"
                            class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center hover:bg-white hover:text-primary transition-colors"
                        >
                            <Youtube className="h-4 w-4" />
                        </a>
                        <a
                            href="#"
                            class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center hover:bg-white hover:text-primary transition-colors"
                        >
                            <Facebook className="h-4 w-4" />
                        </a>
                    </div>
                    <div
                        class="absolute top-0 right-0 w-24 h-24 bg-white/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700 pointer-events-none"
                    >
                    </div>
                </div>

                <!-- 7. CTA (2x1) -->
                <div
                    class="md:col-span-2 md:row-span-1 bg-emerald-900 rounded-[2rem] p-6 lg:p-8 flex flex-col md:flex-row items-center justify-between gap-6 relative overflow-hidden group"
                >
                    <div class="relative z-10 text-center md:text-left">
                        <h3 class="text-xl font-serif text-white mb-2">
                            Siap Mendaftar?
                        </h3>
                        <p class="text-emerald-200 text-xs md:text-sm">
                            Bergabunglah bersama kami sekarang.
                        </p>
                    </div>
                    <a
                        href="/daftar"
                        class="relative z-10 inline-flex items-center gap-2 bg-white text-emerald-900 px-6 py-3 rounded-full font-bold text-sm hover:bg-emerald-50 transition-colors shadow-lg"
                    >
                        <span>Daftar Sekarang</span>
                        <ArrowRight className="h-4 w-4" />
                    </a>

                    <!-- Background decorations -->
                    <div
                        class="absolute inset-0 bg-[url('/noise.png')] opacity-20 mix-blend-overlay"
                    >
                    </div>
                    <div
                        class="absolute -left-10 -bottom-10 w-40 h-40 bg-emerald-600/30 rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"
                    >
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <Footer />
</MainLayout>
